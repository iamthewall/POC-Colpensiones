<?xml version="1.0" encoding="UTF-8"?>
<!-- Configures the Camel Context-->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:soap="http://cxf.apache.org/bindings/soap"
	xmlns:cxf="http://camel.apache.org/schema/cxf" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
	   http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
	   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- ENDPOINT DE ENTRADA -->
	<cxf:cxfEndpoint id="ColpensionesRegistroArchivo" address="http://localhost:8080/colpensionesRegistro"
		endpointName="tns:EndpointRegistroDocumentoNuevo" serviceName="tns:RegistroDocumento"
		serviceClass="co.gov.colpensiones.contracts._1_0.personas.RegistroDocumento"
		wsdlURL="wsdl/RegistrarDocumento.wsdl"
		xmlns:tns="http://www.colpensiones.gov.co/contracts/1.0/personas"
	>
		<cxf:properties>
			<entry key="dataFormat" value="MESSAGE" />
			<entry key="headerFilterStrategy" value="#dropAllMessageHeadersStrategy" />
			<entry key="defaultOperationName" value="RegistrarArchivosTRD" />
		</cxf:properties>
	</cxf:cxfEndpoint>
	
<!-- 	SERVICIO WEB LEGACY DE DOCUMENTOS --> 
<!-- 	<cxf:cxfEndpoint id="ColpensionesFileNetService" -->
<!-- 		address="http://10.130.70.36/WSColpensionesMTOM/SvcDocumento/SvcDocumento.wsdl" -->
